PORT=9000

# MongoDB Connection
# For local Docker: mongodb://localhost:27017/homestead
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/homestead?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/homestead

# Google OAuth - Web Application Credentials from Google Cloud Console
# JavaScript Origins: http://localhost:9000, http://localhost:9001, https://your-domain.com
# Redirect URIs: http://localhost:9000/auth/google/callback, https://your-domain.com/auth/google/callback, https://auth.expo.io/@your-username/your-app-name
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-generate-with-command-above

FRONTEND_URL=http://localhost:9001

# OpenAI API Key for avatar generation
OPENAI_API_KEY=sk-your-openai-api-key-here